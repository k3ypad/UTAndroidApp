<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf9f4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Overview" >

    <Button
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     android:layout_width="fill_parent"
     android:text="All"
     android:textSize="40sp"     
     android:textColor="#915588"
     android:onClick="all_section"
      />
    
    <Button
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     android:layout_width="fill_parent"
     android:text="News"
     android:textSize="40sp"     
     android:textColor="#915588"
     android:onClick="news_section"
      />
    
    <Button
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     android:layout_width="fill_parent"
     android:text="Opinion"
     android:textColor="#915588"
     android:textSize="40sp"

     android:onClick="opinion_section" />
    
    <Button
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     android:layout_width="fill_parent"
     android:text="Features"
		android:textSize="40sp"
		android:textColor="#915588"
     android:onClick="features_section" />
    
    <Button
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     android:layout_width="fill_parent"
     android:text="Sport"
     android:textSize="40sp"
     android:textColor="#915588"
     android:onClick="sport_section" />

</LinearLayout>